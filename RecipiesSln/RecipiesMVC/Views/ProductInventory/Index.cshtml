@using RecipiesMVC.Controllers
@using RecipiesMVC.Controllers.Purchasing
@using RecipiesMVC.Extensions
@using RecipiesMVC.Models;

@model IEnumerable<ProductInventoryViewModel>

@(
 Html.Kendo().Grid(Model)
            .Name("ProductInventoryViewModelGrid")
            .AddDefaultOptions()
            .DataSource(dataSource => dataSource
                .Ajax()
                     .Create(cop => cop.Action<ProductInventoryController>(cc => cc.Create(null, null, null)))
                            .Read(cop => cop.Action<ProductInventoryController>(cc => cc.Read(null, null)))
                            .Update(cop => cop.Action<ProductInventoryController>(cc => cc.Update(null, null)))
                            .Destroy(cop => cop.Action<ProductInventoryController>(cc => cc.Destroy(null, null))))

)
      