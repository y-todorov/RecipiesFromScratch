@using RecipiesMVC.Controllers.Purchasing
@using RecipiesMVC.Extensions
@using RecipiesMVC.Models;

@model IEnumerable<PaymentTypeViewModel>

@(
 Html.Kendo().Grid(Model)
            .Name("PaymentTypeViewModelGrid")
            .AddDefaultOptions()
            .DataSource(dataSource => dataSource
                .Ajax()

                     .Create(cop => cop.Action<PaymentTypeController>(cc => cc.Create(null, null)))
                        .Read(cop => cop.Action<PaymentTypeController>(cc => cc.Read(null)))
                        .Update(cop => cop.Action<PaymentTypeController>(cc => cc.Update(null, null)))
                        .Destroy(cop => cop.Action<PaymentTypeController>(cc => cc.Destroy(null, null))))
)