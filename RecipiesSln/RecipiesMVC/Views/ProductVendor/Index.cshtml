@using RecipiesMVC.Controllers
@using RecipiesMVC.Controllers.Purchasing
@using RecipiesMVC.Models
@using RecipiesMVC.Extensions

@model IEnumerable<ProductVendorViewModel>

@(
        Html.Kendo().Grid(Model)
            .Name("ProductVendorViewModelGrid")
            .AddDefaultOptions()
            .DataSource(dataSource => dataSource
                .Ajax()
                .Create(cop => cop.Action<ProductVendorController>(cc => cc.Create(null, null)))
                .Read(cop => cop.Action<ProductVendorController>(cc => cc.Read(null)))
                .Update(cop => cop.Action<ProductVendorController>(cc => cc.Update(null, null)))
                .Destroy(cop => cop.Action<ProductVendorController>(cc => cc.Destroy(null, null)))
            )
      )